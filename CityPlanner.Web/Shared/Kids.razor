@page "/kids"

<div class="title-box">
    <div class="title-subtext">
        Something at
    </div>
    <div class="relative title-text w-max">
        <h1>
            @Building.Street @Building.OrientationNumber, @Building.District
        </h1>
    </div>
</div>

<EditForm Model="UserDTO" OnSubmit="() => _mainLayout.GoToResults(UserDTO)">
    <div class="flex flex-col justify-center mt-20 w-1/3 mx-auto">
        <p class="text-main font-semibold text-3xl w-full text-center">2.</p>
        <p class="text-2xl font-semibold w-full text-center">Family life</p>
        <div class="mt-2">
            <p class="text-mainDark font-semibold">Do you have kids?</p>
            <InputRadioGroup @bind-Value="UserDTO.Children">
                <div class="flex flex-row space-x-14 mt-1">
                    <div class="flex items-center">
                        <InputRadio class="hidden" id="radio-button3" Value="ChildAspirations.NotPlanned"/>
                        <label for="radio-button3" class="flex items-center cursor-pointer text-mainDark space-x-3">
                            <div class="w-4 h-4 border-2 border-mainLight rounded-full flex items-center justify-center"></div>
                            <span class="text-sm">No</span>
                        </label>
                    </div>

                    <div class="flex items-center">
                        <InputRadio class="hidden" id="radio-button2" Value="ChildAspirations.WithinFiveYears" />
                        <label for="radio-button2" class="flex items-center cursor-pointer text-mainDark space-x-3">
                            <div class="w-4 h-4 border-2 border-mainLight rounded-full flex items-center justify-center"></div>
                            <span class="text-sm">No, but would like to within 5 years</span>
                        </label>
                    </div>
                
                    <div class="flex items-center">
                        <InputRadio class="hidden" id="radio-button1" Value="ChildAspirations.ConcernNow" />
                        <label for="radio-button1" class="flex items-center cursor-pointer text-mainDark space-x-3">
                            <div class="w-4 h-4 border-2 border-mainLight rounded-full flex items-center justify-center"></div>
                            <span class="text-sm">Yes</span>
                        </label>
                    </div>
                </div>
            </InputRadioGroup>
        </div>
        @if (UserDTO.Children != ChildAspirations.NotPlanned)
        {
            <div class="mt-4">
                <p class="text-mainDark font-semibold">School preferences</p>
                <div class="flex flex-row space-x-14 mt-1">
                    <div class="flex items-center">
                        <InputCheckbox id="checkbox0" class="hidden" @bind-Value="UserDTO.WantsPublicElementarySchool"/>
                        <label for="checkbox0" class="flex items-center cursor-pointer text-mainDark font-medium">
                            <div class="w-5 h-5 border-2 border-mainLight rounded-md mr-3 flex items-center justify-center">
                                <svg class="fill-current hidden w-3 h-3 text-white pointer-events-none" viewBox="0 0 20 20">
                                    <path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/>
                                </svg>
                            </div>
                            <span class="text-sm">Public ES</span>
                        </label>
                    </div>
                    <div class="flex items-center">
                        <InputCheckbox id="checkbox1" class="hidden" @bind-Value="UserDTO.WantsReligiousElementarySchool" />
                        <label for="checkbox1" class="flex items-center cursor-pointer text-mainDark font-medium">
                            <div class="w-5 h-5 border-2 border-mainLight rounded-md mr-3 flex items-center justify-center">
                                <svg class="fill-current hidden w-3 h-3 text-white pointer-events-none" viewBox="0 0 20 20">
                                    <path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/>
                                </svg>
                            </div>
                            <span class="text-sm">Church ES</span>
                        </label>
                    </div>
                    <div class="flex items-center">
                        <InputCheckbox id="checkbox2" class="hidden" @bind-Value="UserDTO.WantsPrivateElementarySchool" />
                        <label for="checkbox2" class="flex items-center cursor-pointer text-mainDark font-medium">
                            <div class="w-5 h-5 border-2 border-mainLight rounded-md mr-3 flex items-center justify-center">
                                <svg class="fill-current hidden w-3 h-3 text-white pointer-events-none" viewBox="0 0 20 20">
                                    <path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/>
                                </svg>
                            </div>
                            <span class="text-sm">Private ES</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="mt-4">
                <p class="text-mainDark font-semibold">Kindergarten preferences</p>
                <div class="flex flex-row space-x-14 mt-1">
                    <div class="flex items-center">
                        <InputCheckbox id="checkbox3" class="hidden" @bind-Value="UserDTO.WantsPublicKindergarten" />
                        <label for="checkbox3" class="flex items-center cursor-pointer text-mainDark font-medium">
                            <div class="w-5 h-5 border-2 border-mainLight rounded-md mr-3 flex items-center justify-center">
                                <svg class="fill-current hidden w-3 h-3 text-white pointer-events-none" viewBox="0 0 20 20">
                                    <path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/>
                                </svg>
                            </div>
                            <span class="text-sm">Public Kin.</span>
                        </label>
                    </div>
                    <div class="flex items-center">
                        <InputCheckbox id="checkbox4" class="hidden" @bind-Value="UserDTO.WantsReligiousKindergarten" />
                        <label for="checkbox4" class="flex items-center cursor-pointer text-mainDark font-medium">
                            <div class="w-5 h-5 border-2 border-mainLight rounded-md mr-3 flex items-center justify-center">
                                <svg class="fill-current hidden w-3 h-3 text-white pointer-events-none" viewBox="0 0 20 20">
                                    <path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/>
                                </svg>
                            </div>
                            <span class="text-sm">Church Kin.</span>
                        </label>
                    </div>
                    <div class="flex items-center">
                        <InputCheckbox id="checkbox5" class="hidden" @bind-Value="UserDTO.WantsPrivateKindergarten" />
                        <label for="checkbox5" class="flex items-center cursor-pointer text-mainDark font-medium">
                            <div class="w-5 h-5 border-2 border-mainLight rounded-md mr-3 flex items-center justify-center">
                                <svg class="fill-current hidden w-3 h-3 text-white pointer-events-none" viewBox="0 0 20 20">
                                    <path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/>
                                </svg>
                            </div>
                            <span class="text-sm">Private Kin.</span>
                        </label>
                    </div>
                </div>
            </div>
        }
        <button type="submit" class="main-button flex items-center gap-2 mt-3 px-20 shadow-sm py-2 uppercase text-sm">
            Next
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none">
                <path d="M16 18H18V6H16M6 18L14.5 12L6 6V18Z" fill="currentColor" />
            </svg>
        </button>
    </div>
</EditForm>

@code {
    [Parameter]
    public Building Building { get; set; } = null!;

    [Parameter]
    public UserDTO UserDTO { get; set; } = null!;

    [CascadingParameter(Name = Constants.CascadingParameters.MainLayout)]
    private MainLayout _mainLayout { get; set; } = default!;
}
